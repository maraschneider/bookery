<%= render'users/dashboard_header' %>
<div class="container my-3">
  <% @books.each do |book| %>
  <div class="card p-3 my-3">
    <div class="container d-flex">
      <div class="mr-3"> <%= image_tag book.image_url, style: "width: 100px", alt: "book_cover" %></div>
        <div>
          <div><strong><%= book.title %></strong></div>
          <div><%= book.author %></div>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-secondary" %>
          <%= link_to "View", book_path(book), class: "btn btn-secondary" %>
          <%= link_to "Delete",@book, method: :delete,
                data: { confirm: 'Are you sure you want to delete this book?' },
                class: "btn btn-secondary my-3" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
