<div class="mr-3">
  <%= cl_image_tag @book.book_cover, style: "max-width: 200px"%>

</div>
<div class="ml-3 pr-3" style="max-width: 450px">
  <h1><%= @book.title %></h1>
  <div>
    <strong>Author: </strong>
    <%= @book.author %>
  </div>
  <div>
    <strong>Language: </strong>
    <%= @book.language %>
  </div>
  <div>
    <strong>Genre: </strong>
    <%= @book.genre %>
  </div>
  <div>
    <strong> Description: </strong>
    <%= @book.description %>
  </div>
  <div>
    <strong>Publishing Year: </strong>
    <%= @book.year %>
  </div>
  <%#= image_tag "@book.image_url", alt: "book_cover"%>
</div>
