<div class="container">
  <div class="filter">
  </div>
  <h4 class="mt-3">Books found: <%= pluralize @books.size, "result" %></h4>
  <div class="results">
  <div class="searchresult">
    <%= render 'books/search_bar' %>
    <ul>
    <% @books.each do |book| %>
    <li>

      <div class="card-white">
        <div class="row no-gutters">

          <div class="col-md-4">
            <img src="<%= book.book_cover %>" class="card-img" alt="Search Result">
          <div class="card-body" style="text-align: center;">
            <%= link_to "See Book", book_path(book), class: "btn btn-outline-secondary" %>
          </div>
          </div>

          <div class="col-md-8">
            <div class="card-body">
              <h4 class="card-title"><strong><%= book.title %></strong></h4>
              <p><strong>Author: </strong><%= book.author %></p>
              <p><strong>Genre: </strong><%= book.genre %></p>
              <p><strong>Publishing Year: </strong><%= book.year %></p>
              <p><strong>Language: </strong><%= book.language %></p>
            </div>
          </div>

        </div>
      </div>

    </li>
    <% end %>
    </ul>
  </div>
  <div id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

  </div>
</div>
